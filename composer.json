{
  "name": "my-plugin/coding-standard",
  "description": "Common coding standards for all my plugins",
  "type": "phpcodesniffer-standard",
  "require": {
    "squizlabs/php_codesniffer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "MyPlugin\\": "Sniffs/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "vendor/bin/phpcs --config-set installed_paths ../../my-plugin-sniffs"
    ]
  }
}
